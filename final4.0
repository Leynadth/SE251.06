<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>F1</title>
    <style>
      
    </style>
</head>
<body>
    <main>
        <div><input type="number" id="num1" value="5">+<input type="number" id="num2" value="5">=<input type="number" id="result" disabled></div>
        <input type="button" value="Add The Numbers" id="addButton">
    </main>
    <script>
        function add(a, b) {
            return a + b;
        }

        document.getElementById('addButton').addEventListener('click', () => {
            // Get the values of the input fields and convert them to numbers
            var num1 = Number(document.getElementById('num1').value);
            var num2 = Number(document.getElementById('num2').value);

            // Call the add function and display the result in the third input field
            document.getElementById('result').value = add(num1, num2);
        });
    </script>
</body>
</html>
